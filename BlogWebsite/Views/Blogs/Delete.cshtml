@model BlogWebsite.Blog

@{
    ViewBag.Title = "Delete Blog";
}

<div class="container mt-4">
    <h3 class="text-danger">Are you sure you want to delete this?</h3>
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PostContent)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PostContent)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AuthorName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.AuthorName)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DatePosted)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DatePosted)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </dt>
                <dd class="text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Url.Content(Model.ImageUrl)" alt="Product Image" style="max-width: 300px; height: auto;" />
                    }
                    else
                    {
                        <span>No Image Available</span>
                    }
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IsPublished)
                </dt>
                <dd class="col-sm-9">
                    @if (Model.IsPublished)
                    {
                        <span class="badge bg-success">✓ Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">✗ No</span>
                    }
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Category.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Category.Name)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            }
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary ml-2" })
</div>
