@model BlogWebsite.Comment

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-5">

    <h3>Are you sure you want to delete this?</h3>

    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Commenter Name</dt>
                <dd class="col-sm-9">: @Html.DisplayFor(model => model.CommenterName)</dd>

                <dt class="col-sm-2">Comment</dt>
                <dd class="col-sm-9">: @Html.DisplayFor(model => model.CommentText)</dd>

                <dt class="col-sm-2">Comment Date</dt>
                <dd class="col-sm-9">: @Html.DisplayFor(model => model.DatePosted)</dd>

                <dt class="col-sm-2">Blog Title</dt>
                <dd class="col-sm-9">: @Html.DisplayFor(model => model.Blog.Title)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    <input type="submit" value="Delete" class="btn btn-danger me-2" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
